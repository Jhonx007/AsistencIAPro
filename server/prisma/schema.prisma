generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profesor {
  id               String             @id @db.Uuid
  nombres          String
  apellidos        String
  cedula           String             @unique
  telefono         String?
  created_at       DateTime           @default(now())
  updated_at       DateTime           @updatedAt
  Profesor_Seccion Profesor_Seccion[]
}

model Materia {
  id         Int       @id @default(autoincrement())
  nombre     String    @unique
  created_at DateTime  @default(now()) @map("created_at")
  updated_at DateTime? @updatedAt @map("updated_at")
  Seccion    Seccion[]
}

model Seccion {
  id               Int                @id @default(autoincrement())
  id_materia       Int                @map("id_materia")
  codigo           String             @unique
  semestre         String
  created_at       DateTime           @default(now()) @map("created_at")
  updated_at       DateTime?          @updatedAt @map("updated_at")
  Matricula        Matricula[]
  Profesor_Seccion Profesor_Seccion[]
  Reportes         Reporte[]
  Materia          Materia            @relation(fields: [id_materia], references: [id])
}

model Estudiante {
  id         Int         @id @default(autoincrement())
  nombres    String
  apellidos  String
  cedula     String      @unique
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
  Matricula  Matricula[]
}

model Matricula {
  id_estudiante Int
  id_seccion    Int
  created_at    DateTime     @default(now())
  updated_at    DateTime?    @updatedAt
  Asistencia    Asistencia[]
  Estudiante    Estudiante   @relation(fields: [id_estudiante], references: [id])
  Seccion       Seccion      @relation(fields: [id_seccion], references: [id])

  @@id([id_estudiante, id_seccion])
}

model Asistencia {
  id            Int       @id @default(autoincrement())
  id_estudiante Int
  id_seccion    Int
  fecha         DateTime  @db.Date
  es_presente   Boolean   @default(false) @map("es_presente")
  created_at    DateTime  @default(now()) @map("created_at")
  updated_at    DateTime  @updatedAt @map("updated_at")
  Matricula     Matricula @relation(fields: [id_estudiante, id_seccion], references: [id_estudiante, id_seccion])

  @@unique([id_estudiante, id_seccion, fecha])
}

model Profesor_Seccion {
  id_profesor String   @map("id_profesor") @db.Uuid
  id_seccion  Int      @map("id_seccion")
  Profesor    Profesor @relation(fields: [id_profesor], references: [id])
  Seccion     Seccion  @relation(fields: [id_seccion], references: [id])

  @@id([id_profesor, id_seccion])
}

model Reporte {
  id           Int      @id @default(autoincrement())
  id_seccion   Int      @map("id_seccion")
  fecha_inicio DateTime @map("fecha_inicio")
  fecha_fin    DateTime @map("fecha_fin")
  created_at   DateTime @default(now()) @map("created_at")
  updated_at   DateTime @updatedAt @map("updated_at")
  Seccion      Seccion  @relation(fields: [id_seccion], references: [id])
}
