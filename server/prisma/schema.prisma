generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Profesor {
  id                    String       @id @default(uuid()) @db.Uuid
  nombres               String
  apellidos             String
  cedula                String    @unique
  telefono              String?

  created_at            DateTime  @default(now())
  updated_at            DateTime  @updatedAt
}
